.navigation
  input.navigation__checkbox#navi-toggle(type="checkbox")
  label.navigation__button(for="navi-toggle")
    span.navigation__icon &nbsp;
      b.visually-hidden menu
  .navigation__background &nbsp;
  nav.navigation__nav
    ul.navigation__list
      each layer, index in ["Главная", "Услуги", "Навыки", "Работы", "Отзывы", "Пообщаться"]
        li.navigation__item
          a.navigation__link(href=`#page${index + 1}`) #{layer}